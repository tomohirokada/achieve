<div class="container">
    <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

<p><%= notice %></p>

<h1>ブログ一覧</h1>

<%=link_to "ブログを作成する",new_blog_path, class: 'btn btn-default'%>

<% @blogs.each do |blog| %>
<div class="row">
    <%= image_tag blog.user.image_url, size: '50x50' %>
    <p><%=blog.user.name%></p>
    <%=link_to blog_path(blog) do%>
    <h4><strong><%=blog.title%></strong></h4>
    <%end%>
    <p><%=blog.content%></p>
    <%= link_to "編集", edit_blog_path(blog.id), class:'btn btn-default btn-sm btn-success' %>
    <%= link_to "削除", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-default btn btn-sm btn btn-danger' %>
</div>
    <%end%>
    </div>
    <div id="page-top-btn-blog" class="page-top-btn-blog">
    <p><a class="move-page-top-blog" id="move-page-top-blog">▲</a></p>
</div>
</div>
