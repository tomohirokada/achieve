<div class ="container">
  <div class="container-child col-md-2 col-sm-4 col-xs-6">

<h2>詳細</h2>


<h4>フォローしている人</h4>
<% @user.followers.each do |user| %>
    <p><%= profile_img(user)%></p>
    <p><%=link_to user.name,user_path(user.id) %></p>
    <p><%=user.email%></p>
    <p><%=render 'follow_form', user:user %></p>
<%end%>
</br>

<h4>フォローされている人</h4>
  <% @user.followed_users.each do |user| %>
      <p><%= profile_img(user)%></p>
      <p><%=link_to user.name,user_path(user.id) %></p>
      <p><%=user.email%></p>
      <p><%=render 'follow_form', user:user %></p>
<%end%>


<p><%= link_to "ユーザ一覧ページへ", users_path %></p>

  </div>
</div>
